@model Lect1.Models.RegisterViewModel

@{
    ViewBag.Title = "Add User";
}

<!--Header-->
<header class="bg-warning text-white py-2">
    <div class="container">
        <h1>
            <i class="fa fa-users"></i> @ViewBag.Title
        </h1>
    </div>
</header>


<section class="mt4">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--Actions-->
        <section class="bg-light py-4 mb-4">
            <div class="container">
                <div class="row">
                    @*@Html.ActionLink("Back to Categories", "Index",null ,new { @class = "btn btn-light" })*@
                    <div class="col-md-3 d-grid">
                        <a href="/Users/Index" class="btn btn-light">
                            <i class="fa fa-arrow-left"></i>
                            Back to Users
                        </a>
                    </div>
                    <div class="col-md-3 d-grid">
                        <button class="btn btn-warning text-light">
                            Add User
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!--Body-->
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div>
                        @Html.LabelFor(u => u.Email, new { @class = "form-label" })

                        @Html.TextBoxFor(u => u.Email,
                                new
                                     {
                                      @class = "form-control"
                                    ,
                                         @placeholder = "Email ..."
                                    ,
                                         @title = "Email ..."
                                     }
                                )
                        @Html.ValidationMessageFor(u => u.Email, "",
                                            new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.LabelFor(u => u.Password, new { @class = "form-label" })

                        @Html.PasswordFor(u => u.Password,
                                new
                                {
                                    @class = "form-control"
                                    ,
                                    @placeholder = "Password ..."
                                    ,
                                    @title = "Password ..."
                                }
                                )
                        @Html.ValidationMessageFor(u => u.Password, "",
                                            new { @class = "text-danger" })
                    </div>
                    <div>
                        @Html.LabelFor(u => u.ConfirmPassword, new { @class = "form-label" })

                        @Html.PasswordFor(u => u.ConfirmPassword,
                                new
                                {
                                    @class = "form-control"
                                    ,
                                    @placeholder = "Password confirmation ..."
                                    ,
                                    @title = "Password confirmation..."
                                }
                                )
                        @Html.ValidationMessageFor(u => u.ConfirmPassword, "",
                                            new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    }
</section>
