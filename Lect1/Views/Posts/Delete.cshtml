@model Lect1.Models.Post

@{
    ViewBag.Title = "Delete Post";
}
<!--Header-->
<header class="bg-danger text-white py-2">
    <div class="container">
        <h1>
            <i class="fa fa-folder"></i> @ViewBag.Title
        </h1>
    </div>
</header>
<div class="container mt-5">
    <div>

        <h3>Are you sure you want to delete this Post ?</h3>
        <hr />
        <table class="table  table-group-divider  " >
            <tr>
                <td>@Html.DisplayNameFor(model => model.Category.Title) : </td>
                <td>@Html.DisplayFor(model => model.Category.Title)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Title) : </td>
                <td>@Html.DisplayFor(model => model.Title)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.UpdateDate) : </td>
                <td>@Html.DisplayFor(model => model.UpdateDate)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Body) : </td>
                <td>@Html.DisplayFor(model => model.Body)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.ImgPath) : </td>
                <td>@Html.DisplayFor(model => model.ImgPath)</td>
            </tr>
        </table>



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="">

        <a href="/Posts/Index" class="btn btn-outline-primary btn-light ">
            <i class="fa fa-arrow-left"></i>
            Back To Posts
        </a> 
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
        }
    </div>
</div>
